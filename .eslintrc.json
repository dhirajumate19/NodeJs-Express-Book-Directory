{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
      "linebreak-style": 0,
      "no-console": 0,
      "quotes": ["error", "double"] ,// This enforces double quotes
      "import/extensions": [
        "error",
        {
            "js": "ignorePackages"
        }
    ]
  }
}